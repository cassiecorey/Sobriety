<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackthenorth.sobriety"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LaunchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/title_activity_calculator"
            android:parentActivityName="hackthenorth.sobriety.LaunchActivity" >
        </activity>
        <activity
            android:name=".ContactsActivity"
            android:label="@string/title_activity_contacts"
            android:parentActivityName="hackthenorth.sobriety.LaunchActivity" >
        </activity>
        <activity
            android:name=".GetHomeActivity"
            android:label="@string/title_activity_get_home"
            android:parentActivityName="hackthenorth.sobriety.LaunchActivity" >
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
