<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackthenorth.sobriety.LaunchActivity" >

    <Button 
        android:id="@+id/sober_drivers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:text="SOBER PEOPLE"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#AE00FF"
        android:background="#00FF26"
        android:onClick="callSomebody"/>
    
    <Button 
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#00FF26"
        android:layout_weight="1"
        android:text="HOW DRUNK AM I?"
        android:background="#AE00FF"
        android:onClick="openCalculator"/>
    
    <Button
        android:id="@+id/get_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="#AE00FF"
        android:layout_weight="1"
        android:text="GET HOME"
        android:background="#00FF26"
        android:onClick="getHome" />

</LinearLayout>
